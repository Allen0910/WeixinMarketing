@model Senparc.Areas.Admin.Models.VD.IBaseAdminVD
<!DOCTYPE html>
<html data-ng-app="app">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Title" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="~/Areas/SenparcWeixinMarketingAdmin/Content/Images/bodyImg/wanya.ico" type="image/x-icon">
    <!--Basic Styles-->
    @Styles.Render("~/backend/css/bootstrap")
    <link id="bootstrap-rtl-link" href="" rel="stylesheet" />
    <!--Beyond styles-->
    @Styles.Render("~/backend/css/beyond")
    <link href="~/Areas/SenparcWeixinMarketingAdmin/Content/style.css" rel="stylesheet" />
    <link id="skin-link" href="" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/backend/bundles/jquery")

    @RenderSection("HeaderContent", false)
</head>
<body @Html.Raw((ViewBag.Init != null ? "data-ng-init=\"" + ViewBag.Init + "\"" : ""))>
    <div data-ng-cloak @Html.Raw((ViewBag.Ctrl != null ? "data-ng-controller=\"" + ViewBag.Ctrl + "\"" : ""))>
        <!-- Loading Container -->
        @*<div class="loading-container">
                <div class="loader"></div>
            </div>*@
        <!--  /Loading Container -->
        <!-- Navbar -->
        <div class="navbar">
            <div class="navbar-inner">
                <div class="navbar-container">
                    <!-- Navbar Barnd -->
                    <div class="navbar-header pull-left">
                        <a href="#" class="navbar-brand">
                            <small>
                                <img src="/Content/Images/logo.png" alt="" />
                            </small>
                        </a>
                    </div>
                    <!-- /Navbar Barnd -->
                    <!-- Sidebar Collapse -->
                    <div class="sidebar-collapse" id="sidebar-collapse">
                        <i class="collapse-icon fa fa-bars"></i>
                    </div>
                    <!-- /Sidebar Collapse -->
                </div>
            </div>
        </div>
        <!-- /Navbar -->
        <!-- Main Container -->
        <div class="main-container container-fluid">
            <!-- Page Container -->
            <div class="page-container">
                <!-- Page Sidebar -->
                <div class="page-sidebar" id="sidebar">
                    <!-- Page Sidebar Header-->
                    <div class="sidebar-header-wrapper">
                        <p class="userinfo" id="userinfo_welcome">欢迎您 @(Model.UserName)</p>
                    </div>
                    <!-- /Page Sidebar Header -->
                    <!-- Sidebar Menu -->
                    <ul class="nav sidebar-menu">
                        <li class="@Html.CurrentMenu("Home")">
                            <a href="@Url.Action("Index", "Home")"><i class="menu-icon glyphicon glyphicon-home"></i><span class="menu-text">首页</span></a>
                        </li>
                        <li class="@Html.CurrentMenu("AdminUserInfo")">
                            <a href="@Url.Action("Index", "AdminUserInfo")"><i class="menu-icon glyphicon glyphicon-user"></i><span class="menu-text">管理员管理</span></a>
                        </li>
                        <li class="@Html.CurrentMenu("Account")">
                            <a href="@Url.Action("Index", "Account")"><i class="menu-icon fa fa-user"></i><span class="menu-text">用户管理</span></a>
                        </li>
                        <li class="@Html.CurrentMenu("RedPackageActivity")">
                            <a href="@Url.Action("Index", "RedPackageActivity")"><i class="menu-icon fa fa-sitemap"></i><span class="menu-text">活动管理</span></a>
                        </li>
                        <li class="@Html.CurrentMenu("AwardLog")">
                            <a href="@Url.Action("Index", "RedPackageActivityAwardLog")"><i class="menu-icon fa fa-folder-open"></i><span class="menu-text">奖品记录</span></a>
                        </li>
                        <li class="@Html.CurrentMenu("Order")">
                            <a href="@Url.Action("Index", "Order")"><i class="menu-icon fa fa-folder-open"></i><span class="menu-text">订单记录</span></a>
                        </li>
                        <li class="@Html.CurrentMenu("SystemConfig")">
                            <a href="@Url.Action("Index", "SystemConfig")"><i class="menu-icon glyphicon glyphicon-cog"></i><span class="menu-text">系统配置</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Login")"><i class="menu-icon fa fa-sign-out"></i><span class="menu-text">管理员退出</span></a>
                        </li>
                    </ul>
                    <!-- /Sidebar Menu -->
                </div>
                <!-- /Page Sidebar -->
                <!-- Chat Bar -->
                <div class="page-content">
                    <div class="page-breadcrumbs">
                        <ul class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-home"></i>
                                <a href="@Url.Action("Index","Home")">
                                    首页
                                </a>
                            </li>
                            @RenderSection("breadcrumbs", false)
                        </ul>
                    </div>
                    <div class="page-header">
                        <div class="header-buttons">
                            <a class="sidebar-toggler" href="javascript:;">
                                <i class="fa fa-arrows-h"></i>
                            </a>
                            <a class="refresh" id="refresh-toggler" href="javascript:window.location.reload();">
                                <i class="glyphicon glyphicon-refresh"></i>
                            </a>
                            <a class="fullscreen" id="fullscreen-toggler" href="javascript:;">
                                <i class="glyphicon glyphicon-fullscreen"></i>
                            </a>
                        </div>
                    </div>
                    <div class="page-body">
                        @Html.RenderMessageBox()
                        @RenderBody()
                        <toaster-container></toaster-container>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Basic Scripts-->
    @Scripts.Render("~/backend/bundles/js",
                    "~/bundles/angularjs", "~/backend/angularjs/app")
    @RenderSection("scripts", false)
</body>
</html>
<script>
    $(function () {
        //点击‘收起’按钮隐藏与显示
        $('#sidebar-collapse').click(function () {
            $('p#userinfo_welcome').toggle();
        });
    });
</script>